@page
@model crmapp.Pages.Customers.Create
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md 8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">New Customer</h2>

        @if (Model.ErrorMessage.Length > 0){
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-form="user_name" />
                    <span asp-validation-for="user_name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-form="email" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Password*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-form="password" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Customers/Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>